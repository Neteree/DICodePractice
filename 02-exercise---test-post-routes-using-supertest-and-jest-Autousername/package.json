{
  "name": "01-ex-using-mongoose-in-express",
  "author": "Developers Institute",
  "version": "1.0.0",
  "scripts": {
    "start": "nodemon src/server.js",
    "test": "jest",
    "test:e2e": "cypress run",
    "test:watch": "jest --watch",
    "lint:js": "eslint .",
    "prettier:check": "prettier --check '**/*{.css,.html,.js}'",
    "ci": "start-server-and-test 'node src/server.js' http://localhost:5001 test:e2e"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.2.0",
    "mongodb-memory-server": "^7.4.0",
    "prettier": "^2.4.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^6.0.6",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.6"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./setupTests.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/server.js",
      "<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
